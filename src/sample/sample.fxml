<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ProgressBar?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Button text="Get Employee Name" onAction="#buttonPressed" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <ListView GridPane.rowIndex="1" GridPane.columnIndex="0" fx:id="listView"/>
    <ProgressBar fx:id="progressBar" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <Label fx:id="pbLabel" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
</GridPane>